Program Aula01_07 ;
var
	a, b : integer;
Begin
     writeln('Escolha o primeiro número:');
      	readln(a);
      writeln('Escolha o segundo número:');
      	readln(b);
      	
      writeln('-------------------------------');
      
			writeln('A soma dos números é: ', a + b);
      writeln('A subtração dos números é: ', a - b);
      writeln('A multiplicação dos números é: ', a * b);
      writeln('A divisão dos números é: ', a / b);
End.